{
    "compilerOptions": {
      "module": "ESNext", // or "ES6"
      "target": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "outDir": "./dist"
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"]
  }  